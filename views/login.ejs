<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Professional Animated Login</title>
<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  height: 100vh;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.login-container {
  background: #ffffff;
  width: 360px;
  padding: 40px 40px 60px 40px;
  border-radius: 15px;
  box-shadow: 0 25px 50px rgba(102, 126, 234, 0.4);
  position: relative;
  animation: fadeSlideIn 1s ease forwards;
}

@keyframes fadeSlideIn {
  0% {
    opacity: 0;
    transform: translateY(50px) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.login-container::before {
  content: "";
  position: absolute;
  top: -60px;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 120px;
  background: radial-gradient(circle at center, #8265f5, #5537a6);
  border-radius: 50%;
  filter: blur(35px);
  opacity: 0.7;
  animation: pulseGlow 3s ease-in-out infinite;
  z-index: -1;
}

@keyframes pulseGlow {
  0%, 100% {
    opacity: 0.7;
    transform: translateX(-50%) scale(1);
  }
  50% {
    opacity: 0.5;
    transform: translateX(-50%) scale(1.1);
  }
}

h2 {
  text-align: center;
  font-weight: 600;
  color: #362f78;
  margin-bottom: 30px;
  letter-spacing: 1.2px;
  user-select: none;
}

.form-group {
  position: relative;
  margin-bottom: 30px;
}

input[type="email"], input[type="password"] {
  width: 100%;
  padding: 14px 14px 14px 14px;
  background: transparent;
  border: none;
  border-bottom: 2.5px solid #ccc;
  font-size: 16px;
  outline: none;
  transition: border-color 0.3s ease;
  color: #362f78;
  font-weight: 500;
}

input[type="email"]:focus, input[type="password"]:focus {
  border-color: #764ba2;
}

label {
  position: absolute;
  left: 14px;
  top: 16px;
  color: #999;
  font-weight: 500;
  font-size: 16px;
  pointer-events: none;
  transition: 0.3s ease all;
  user-select: none;
}

input:focus ~ label,
input:not(:placeholder-shown) ~ label {
  top: -10px;
  left: 8px;
  font-size: 12px;
  color: #764ba2;
  background: white;
  padding: 0 5px;
}

button {
  width: 100%;
  padding: 14px;
  background: linear-gradient(135deg, #764ba2, #667eea);
  border: none;
  border-radius: 50px;
  color: white;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
  transition: background 0.4s ease;
  user-select: none;
}

button:hover {
  background: linear-gradient(135deg, #5537a6, #4a3592);
  box-shadow: 0 10px 25px rgba(85, 55, 166, 0.8);
}

.show-password-toggle {
  position: absolute;
  right: 14px;
  top: 60%;
  transform: translateY(-50%);
  cursor: pointer;
  font-size: 14px;
  color: #764ba2;
  user-select: none;
  background: transparent;
  border: none;
  font-weight: 600;
  padding: 0;
  line-height: 2;
}

@media (max-width: 400px) {
  .login-container {
    width: 90vw;
    padding: 30px 30px 50px 30px;
  }
}
</style>
</head>
<body>
  <div class="login-container" role="main" aria-label="Login Form">
    <h2>Sign In</h2>
    <form method="post" action="/login" id="loginForm" novalidate>
      <div class="form-group">
        <input type="email" id="email"name="email" required placeholder=" " autocomplete="email" aria-required="true" aria-describedby="emailHelp" />
        <label for="email">Email address</label>
      </div>
      <div class="form-group" style="position:relative;">
        <input type="password" name="password" id="password" required placeholder=" " autocomplete="current-password" aria-required="true" />
        <label for="password">Password</label>
        <i class="fa-solid fa-eye-slash"></i>
      </div>
      <button type="submit" aria-live="polite">Login</button>
    </form>
  </div>

<script>
const togglePasswordBtn = document.getElementById('togglePassword');
const passwordInput = document.getElementById('password');

togglePasswordBtn.addEventListener('click', () => {
  if (passwordInput.type === 'password') {
    passwordInput.type = 'text';
    togglePasswordBtn.textContent = 'Hide';
  } else {
    passwordInput.type = 'password';
    togglePasswordBtn.textContent = 'Show';
  }
});

document.getElementById('loginForm').addEventListener('submit', function(e) {
  e.preventDefault();
  // Basic validation feedback
  const email = document.getElementById('email').value.trim();
  const password = passwordInput.value.trim();
  if (!email) {
    alert('Please enter your email.');
    return;
  }
  if (!password) {
    alert('Please enter your password.');
    return;
  }
  alert('Login submitted!\nEmail: ' + email);
});
</script>
</body>
</html>

