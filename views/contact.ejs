<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Contact Us - Rovyn Ticket Booking</title>
<style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  height: 100vh;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30px 20px;
  color: #362f78;
}

.contact-container {
  background: #fff;
  width: 450px;
  max-width: 100%;
  padding: 50px 40px 60px;
  border-radius: 15px;
  box-shadow: 0 30px 60px rgba(102, 126, 234, 0.35);
  animation: fadeInUp 1s ease forwards;
  position: relative;
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(40px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.contact-container::before {
  content: "";
  position: absolute;
  top: -65px;
  left: 50%;
  transform: translateX(-50%);
  width: 135px;
  height: 135px;
  background: radial-gradient(circle at center, #8265f5, #5537a6);
  border-radius: 50%;
  filter: blur(40px);
  opacity: 0.65;
  animation: pulseGlow 3s ease-in-out infinite;
  z-index: -1;
}

@keyframes pulseGlow {
  0%, 100% {
    opacity: 0.65;
    transform: translateX(-50%) scale(1);
  }
  50% {
    opacity: 0.4;
    transform: translateX(-50%) scale(1.1);
  }
}

h2 {
  font-weight: 700;
  text-align: center;
  margin-bottom: 40px;
  color: #362f78;
  letter-spacing: 1.2px;
  user-select: none;
}

.form-group {
  position: relative;
  margin-bottom: 30px;
}

input[type="text"], input[type="email"], textarea {
  width: 100%;
  padding: 14px 14px 14px 14px;
  background: transparent;
  border: none;
  border-bottom: 2.5px solid #ccc;
  font-size: 16px;
  outline: none;
  transition: border-color 0.3s ease;
  color: #362f78;
  font-weight: 500;
  resize: none;
  font-family: 'Poppins', sans-serif;
}

textarea {
  min-height: 100px;
}

input[type="text"]:focus, input[type="email"]:focus, textarea:focus {
  border-color: #764ba2;
}

label {
  position: absolute;
  left: 14px;
  top: 16px;
  color: #999;
  font-weight: 500;
  font-size: 16px;
  pointer-events: none;
  transition: 0.3s ease all;
  user-select: none;
}

input:focus ~ label,
input:not(:placeholder-shown) ~ label,
textarea:focus ~ label,
textarea:not(:placeholder-shown) ~ label {
  top: -10px;
  left: 8px;
  font-size: 12px;
  color: #764ba2;
  background: white;
  padding: 0 5px;
}

button {
  width: 100%;
  padding: 16px;
  background: linear-gradient(135deg, #764ba2, #667eea);
  border: none;
  border-radius: 50px;
  color: white;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
  transition: background 0.4s ease;
  user-select: none;
}

button:hover {
  background: linear-gradient(135deg, #5537a6, #4a3592);
  box-shadow: 0 10px 25px rgba(85, 55, 166, 0.8);
}

.error-message {
  color: #d93025;
  font-size: 0.85rem;
  margin-top: 5px;
  font-weight: 600;
  user-select: none;
  display: none;
}

@media (max-width: 500px) {
  .contact-container {
    width: 100%;
    padding: 40px 30px 50px;
  }
}

</style>
</head>
<body>
  <main>
    <section class="contact-container" aria-label="Contact us form for Rovyn ticket booking">
      <h2>Contact Us</h2>
      <form id="contactForm" novalidate>
        <div class="form-group">
          <input type="text" id="name" name="name" placeholder=" " required aria-describedby="errorName" autocomplete="name" />
          <label for="name">Full Name</label>
          <div class="error-message" id="errorName">Please enter your full name.</div>
        </div>

        <div class="form-group">
          <input type="email" id="email" name="email" placeholder=" " required aria-describedby="errorEmail" autocomplete="email" />
          <label for="email">Email Address</label>
          <div class="error-message" id="errorEmail">Please enter a valid email address.</div>
        </div>

        <div class="form-group">
          <input type="text" id="subject" name="subject" placeholder=" " required aria-describedby="errorSubject" />
          <label for="subject">Subject</label>
          <div class="error-message" id="errorSubject">Please enter a subject.</div>
        </div>

        <div class="form-group">
          <textarea id="message" name="message" placeholder=" " required aria-describedby="errorMessage"></textarea>
          <label for="message">Message</label>
          <div class="error-message" id="errorMessage">Please enter your message.</div>
        </div>

        <button type="submit">Send Message</button>
      </form>
    </section>
  </main>

  <script>
    const contactForm = document.getElementById('contactForm');

    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();

      let isValid = true;

      // Name validation
      const name = contactForm.name.value.trim();
      const errorName = document.getElementById('errorName');
      if (!name) {
        errorName.style.display = 'block';
        isValid = false;
      } else {
        errorName.style.display = 'none';
      }

      // Email validation
      const email = contactForm.email.value.trim();
      const errorEmail = document.getElementById('errorEmail');
      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!email || !emailPattern.test(email)) {
        errorEmail.style.display = 'block';
        isValid = false;
      } else {
        errorEmail.style.display = 'none';
      }

      // Subject validation
      const subject = contactForm.subject.value.trim();
      const errorSubject = document.getElementById('errorSubject');
      if (!subject) {
        errorSubject.style.display = 'block';
        isValid = false;
      } else {
        errorSubject.style.display = 'none';
      }

      // Message validation
      const message = contactForm.message.value.trim();
      const errorMessage = document.getElementById('errorMessage');
      if (!message) {
        errorMessage.style.display = 'block';
        isValid = false;
      } else {
        errorMessage.style.display = 'none';
      }

      if (isValid) {
        alert('Thank you for contacting Rovyn!\nWe will get back to you shortly.');
        contactForm.reset();
      }
    });
  </script>
</body>
</html>
